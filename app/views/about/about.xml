<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onPageLoaded" xmlns:Card="nativescript-cardview">
    <Page.actionBar>
        <ActionBar title="About" automationText="ActionBar">
            <NavigationButton icon="res://ic_back" tap="goBack" automationText="GoBack" />
        </ActionBar>
    </Page.actionBar>
    <GridLayout class="about-content">
        <StackLayout>
            <Image src="res://logo_about" class="about-logo" />
            <Label class="about-text" textWrap="true" text="NativeScript is how you build cross-platform, native apps without web views. Use Angular, TypeScript or modern JavaScript to get truly native UI and performance while sharing skills and code with the web. Get 100% access to native APIs via JavaScript and reuse of packages from NPM, CocoaPods and Gradle. Open source and backed by Telerik." />
                <Card:CardView backgroundColor="#fff" elevation="40" radius="5">
                    <GridLayout rows="200, auto, auto" columns="auto, auto, *" padding="20">
                        <Image src="~/images/minion.jpg" stretch="aspectFill" colSpan="3" row="0" />
                        <Label text="Phat Test" class="info" textWrap="true" row="1" colSpan="3" />          
                    </GridLayout>
                </Card:CardView>
        </StackLayout>
    </GridLayout>
</Page>